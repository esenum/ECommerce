@model IEnumerable<E_commerce_Site.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>
<div>
    <p>
        <a class="btn btn-info mt-1 mb-1" asp-action="Create">Create New</a>
    </p>
    <table class="table table-striped table-bordered text-center display flex-nowrap" cellspacing="0" id="myTable" width="100%">
        <thead >
            <tr>
                <th >
                    Category Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                responsive: true
            })
            });
    </script>
}